{
  "manifest_version": 3,
  "name": "Custom Input Box Anywhere",
  "version": "1.0",
  "description": "Inject a floating input box that syncs with real input fields.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
  "default_popup": "popup.html",
  "default_icon": {
    "48": "icons/icon48.png"
  }
},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
